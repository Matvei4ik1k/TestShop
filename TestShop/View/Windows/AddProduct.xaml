<Window x:Class="TestShop.View.Windows.AddProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestShop.View.Windows"
        mc:Ignorable="d"
        Title="AddProduct" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterScreen">
    <Grid  Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="10" />
            <RowDefinition Height="50" />
            <RowDefinition Height="10" />
            <RowDefinition Height="50" />
            <RowDefinition Height="10" />
            <RowDefinition Height="50" />
            <RowDefinition Height="10" />
            <RowDefinition Height="50" />
            <RowDefinition Height="10" />
            <RowDefinition Height="50" />
            <RowDefinition Height="10" />
            <RowDefinition Height="50" />
            <RowDefinition Height="10" />
            <RowDefinition Height="50" />
            <RowDefinition Height="10" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="300" />

        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Text="Имя:"/>
        <TextBox Name="NameTb" Grid.Row="0" Grid.Column="2" MaxLength="40"/>

        <TextBlock Grid.Row="2" Text="Цена:"/>
        <TextBox Name="PriceTb" Grid.Row="2" Grid.Column="2" MaxLength="10"/>

        <TextBlock Grid.Row="4" Text="Категория:"/>
        <ComboBox Name="CategoryCmb" Grid.Row="4" Grid.Column="2"/>

        <TextBlock Grid.Row="6" Text="Описание:"/>
        <TextBox Name="DescriptionTb" Grid.Row="6" Grid.Column="2"/>

        <TextBlock Grid.Row="8" Text="Дата выпуска:"/>
        <DatePicker Name="ReleaseDateDp" Grid.Row="8" Grid.Column="2"/>

        <TextBlock Grid.Row="10" Text="есть на складе:"/>
        <CheckBox Name="IsAvailableCb" Grid.Row="10" Grid.Column="2"/>

        <TextBlock Grid.Row="12" Text="Фото товара:"/>
        <TextBox Name="PhotoTb" Grid.Row="12" Grid.Column="2"/>

        <Button Name="LoadFromPCBtn" Grid.Row="14" Grid.Column="2" Content="Загрузить" Click="LoadFromPCBtn_Click"/>
        <Button Name="AddFromPCBtn" Grid.Row="16" Grid.Column="2" Content="Добавить товар" Click="AddFromPCBtn_Click"/>
    </Grid>
</Window>
