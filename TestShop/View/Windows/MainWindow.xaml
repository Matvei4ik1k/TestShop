<Window x:Class="TestShop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestShop"
        mc:Ignorable="d"
        Title="MainWindow" Height="900" Width="1600" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>

        <Button Name="AddProductBtn" Content="Добавить товар" Click="AddProductBtn_Click"/>
        <Button Name="EditProductBtn" Grid.Column="2" Content="Изменить товар" Click="EditProductBtn_Click"/>
        <Button Name="RemoveProductBtn" Grid.Column="4" Content="Удалить товар" Click="RemoveProductBtn_Click"/>

        <ListView Name="ProductsLv" Grid.ColumnSpan="5" Grid.Row="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Изображение" DisplayMemberBinding="{Binding Photo}"/>
                    <GridViewColumn Header="Название товара" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Цена" DisplayMemberBinding="{Binding Price, StringFormat={}{0:C0}, ConverterCulture=ru-RU}"/>
                    <GridViewColumn Header="Категория" DisplayMemberBinding="{Binding Category.Name}"/>
                    <GridViewColumn Header="Описание" DisplayMemberBinding="{Binding Description}"/>
                    <GridViewColumn Header="Дата выпуска" DisplayMemberBinding="{Binding ReleaseDate, StringFormat=dd.MM.yyyy}"/>
                    <GridViewColumn Header="Наличие на складе" DisplayMemberBinding="{Binding IsAvailable}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
